@model IEnumerable<FuzbollLadder.Models.Player>
    
<table>
    <tr>
        <th>Rank</th>
        <th>Player</th>
        <th>Wins</th>
        <th>Losses</th>
        <th>Total</th>
        <th>Winrate</th>
        <th>Rating</th>
    </tr>
    
    @{ var rank = 1; }
    @foreach (var player in Model.OrderByDescending(p => p.Rating))
    {
        <tr>
            <td>@(rank++)</td>
            <td>@player.Name</td>
            <td>@player.Wins</td>
            <td>@player.Losses</td>
            <td>@player.TotalGames</td>
            <td>@player.WinRate.ToString("p0")</td>
            <td>@player.Rating.ToString("n0")</td>
        </tr>
    }
</table>