@model IReadOnlyList<FuzbollLadder.Models.PlayerStat>

@if (Model.Any())
{
    <table>
        <tr>
            <th>Player</th>
            <th>Today</th>
            <th>Last 7 days</th>
            <th>Last 30 days</th>
        </tr>

        @foreach (var playerStat in Model.OrderByDescending(p => p.Player.Rating))
        {
            <tr>
                <td>@playerStat.Player.Name</td>
                <td>@playerStat.DailyRatingDelta.ToString("+#;-#;0")</td>
                <td>@playerStat.WeeklyRatingDelta.ToString("+#;-#;0")</td>
                <td>@playerStat.MonthlyRatingDelta.ToString("+#;-#;0")</td>
            </tr>
        }
    </table>
}
else
{
    <div>There are no statistics to show</div>
}